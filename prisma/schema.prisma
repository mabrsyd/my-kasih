generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Media {
  id            String   @id @default(uuid())
  fileName      String   @db.VarChar(255)
  filePath      String   @unique
  publicUrl     String
  mimeType      String   @db.VarChar(100)
  size          Int
  width         Int?
  height        Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  galleryPhotos Gallery? @relation("GalleryImage")
  letterImages  Letter[] @relation("LetterImage")
  memories      Memory[] @relation("MemoryCover")

  @@index([createdAt])
  @@index([mimeType])
}

model Memory {
  id          String    @id @default(uuid())
  date        DateTime
  title       String    @db.VarChar(255)
  description String
  emoji       String    @db.VarChar(10)
  coverId     String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?
  cover       Media     @relation("MemoryCover", fields: [coverId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([publishedAt])
}

model Gallery {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(255)
  description String?
  order       Int      @default(0)
  imageId     String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  image       Media    @relation("GalleryImage", fields: [imageId], references: [id], onDelete: Cascade)

  @@index([order])
}

model Letter {
  id        String   @id @default(uuid())
  title     String   @db.VarChar(255)
  content   String
  order     Int      @default(0)
  published Boolean  @default(false)
  imageId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     Media?   @relation("LetterImage", fields: [imageId], references: [id])

  @@index([order])
  @@index([published])
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String   @db.VarChar(50)
  entityType String   @db.VarChar(50)
  entityId   String   @db.VarChar(100)
  changes    Json?
  ipAddress  String   @db.VarChar(45)
  userAgent  String
  createdAt  DateTime @default(now())

  @@index([action, createdAt])
  @@index([ipAddress, createdAt])
  @@index([entityType, entityId])
}

model About {
  id        String   @id @default(uuid())
  icon      String   @db.VarChar(10)
  title     String   @db.VarChar(255)
  content   String
  order     Int      @default(0)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([order])
}

model Settings {
  key         String   @id @db.VarChar(100)
  value       String
  description String?
  updatedAt   DateTime @updatedAt
}
